{
  "name": "react-electron-boilerplate",
  "author": "Thierry Brouet - SÃ©bastien Vermelle",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@electron/remote": "^1.0.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.3",
    "electron-is-dev": "^1.2.0",
    "electron-devtools-installer": "^3.1.1",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1",
    "wait-on": "^5.2.1"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "react:test": "react-scripts test",
    "react:eject": "react-scripts eject",
    "serve": "yarn electron:serve",
    "build": "yarn electron:build",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none yarn react:start\" \"yarn electron:start\"",
    "electron:build": "yarn react:build && electron-builder -c.extraMetadata.main=build/main.js",
    "electron:start": "wait-on tcp:3000 && electron ."
  },
  "build": {
    "appId": "com.react_electron_boilerplate.app",
    "productName": "React Electron Boilerplate",
    "target": "nsis",
    "icon": "build_ressources/icon.ico",
    "directories": {
      "output": "build",
      "buildResources": "build_ressources"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "createDesktopShortcut": true,
      "installerIcon": "public/logo192.ico",
      "uninstallerIcon": "public/logo192.ico",
      "installerHeaderIcon": "public/logo192.ico"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
